/* pages/index/index.wxss */
.slide{
  height: 380rpx;
}

.slide image{
  height: 100%;
  width: 100%;
}

.soduku{
  display: flex;
  flex-wrap: wrap;
 border-left: 1rpx solid #b6b6b6;
 border-top: 1rpx solid #b6b6b6;
}

.soduku .item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 250rpx;
  height: 250rpx;
  /* border: 1rpx solid #999999; */
  border-right: 1rpx solid #b6b6b6 ;
  border-bottom: 1rpx solid #b6b6b6;
  box-sizing: border-box;
}

.soduku .item image{
  width: 80rpx;
  height: 80rpx;
}
.soduku .item text{
  display: block;
  font-size: 30rpx;
  color: #8a8a8a;
  margin-top: 20rpx;
}

.link{
  display: flex;
  justify-content: space-around;
  height: 250rpx;
}

/* .link .item{
  border-radius: 20rpx;
} */

.link image{
  display: block;
  width: 300rpx;
  height: 200rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
}