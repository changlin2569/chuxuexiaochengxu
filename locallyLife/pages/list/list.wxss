/* pages/list/list.wxss */
page{
  padding: 10rpx;
}
.header{
  display: flex;
  align-items: center;
  width: 100%;
  height: 60rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border: 2rpx solid #888;
  border-radius: 20rpx;
}
.header input{
  flex: 1;
}
.header icon{
  width: 10%;
}

.list{
  background-color: #fff;
}

.list .list-item{
  display: flex;
  align-items: flex-start;
  border-bottom: 1rpx solid #eee;
}

.list .list-item image{
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
}

.list .list-item .message{
  display: flex;
  flex-direction: column;
  flex: 1;
  padding: 10rpx 0;
  font-size: 30rpx;
}

.list .list-item .message .name{
  color: #234;
  font-size: 28rpx;
}

.list .list-item .message .phone,
.list .list-item .message .address{
  color: #678;
  font-size: 24rpx;
}

.list .list-item .message .time{
  color: #456;
  font-size: 22rpx;
}

.list .list-item .score{
  margin: 20rpx 20rpx 0 -40rpx;
  padding: 0 10rpx;
  background-color: #ee523d;
  border-radius: 30rpx;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
}