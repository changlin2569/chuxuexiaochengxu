page{
  height: 100%;
}
.root{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.toplis{
  display: flex;
  color: aliceblue;
  background-color: #17191b;
}
.toplis text{
  display: inline-block;
  text-align: center;
  flex: 1;
  font-size: 14px;
  margin: 5px;
}

.content{
  flex: 1;
  overflow: hidden;
}

.content .slider image{
  display: block;
  width: 100%;
  height: 150px;
}

.content .banner{
  display: flex;
  height: 100px;
}

.content .banner .item{
   width: 33.33333333%;
   text-align: center;
   background-color: #101214;
}

.content .banner image{
  width: 50px;
  height: 50px;
  margin-top: 10px;
}

.content .banner text{
  display: block;
  color: #ccc;
  font-size: 14px;
}

.content .musiclis{
  display: flex;
  flex-wrap: wrap;
  /* height: 100%; */
  background-color: #101214;
}

.content .musiclis .item{
  width: 33.3333333%;
  height: 150px;
  /* text-align: center; */
}

.content .musiclis .item image{
  display: block;
  width: 100px;
  height: 100px;
  /* margin: 10px auto; */
}

.content .musiclis .item text{
  display: block;
  width: 100px;
  color: #ccc;
  font-size: 12px;
  /* text-align: center; */
}
.bottomlis{
  display: flex;
  height: 50px;
  background-color: #17191b;
}

.bottomlis .musicimg{
  width: 50px;
  height: 50px;
}

.bottomlis .musicimg image{
  width: 45px;
  height: 45px;
  margin:2px;
}

.singer{
  flex: 1;
  margin: 5px;
  color: aliceblue;
}

.singer text{
  display:block;
}

.singer .singermsg{
  font-size: 12px;
  color: #ccc;
  margin-top: 2px;
}

.bottomlis .player image{
  width: 40px;
  height: 40px;
  margin: 5px;
}